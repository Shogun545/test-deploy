# ==========================================
# Stage 1: Dependencies
# ==========================================
FROM node:22-alpine AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

# ก๊อป package.json มาลงแค่ dependencies
COPY package.json package-lock.json* ./
# ใช้ npm ci แทน npm install (เร็วกว่าและชัวร์กว่า)
RUN npm ci

# ==========================================
# Stage 2: Builder
# ==========================================
FROM node:22-alpine AS builder
WORKDIR /app

COPY --from=deps /app/node_modules ./node_modules
COPY . .

# ปิด Telemetry ของ Next.js (ไม่ส่งข้อมูลกลับไปหา Vercel)
ENV NEXT_TELEMETRY_DISABLED 1

# สร้าง Build (จะได้โฟลเดอร์ .next/standalone ออกมา)
RUN npm run build

# ==========================================
# Stage 3: Runner (Production)
# ==========================================
FROM node:22-alpine AS runner
WORKDIR /app

ENV NODE_ENV production
ENV NEXT_TELEMETRY_DISABLED 1
ENV PORT 3000

# สร้าง User ใหม่ชื่อ nextjs (เพื่อความปลอดภัย ไม่รันเป็น root)
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# ก๊อปไฟล์ public (รูปภาพ/static files)
COPY --from=builder /app/public ./public

# ✅ ก๊อปเฉพาะไฟล์ Standalone ที่ Next.js คัดมาให้แล้ว (พระเอกของเรา)
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
# ✅ ก๊อปไฟล์ static เพื่อให้เว็บโหลดเร็ว
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# เปลี่ยนไปใช้ User nextjs
USER nextjs

EXPOSE 3000

# รันด้วย node server.js (เร็วกว่า npm start)
CMD ["node", "server.js"]